	<Dialog title="GOALS" id="dialog1">
		<l:Grid defaultSpan="L12 M12 S12" width="auto" id="idGrid">
		        <l:content>
		<f:SimpleForm id="SimpleFormDisplay354" minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" 
			labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="2" columnsM="2">
			<f:content>
				<Label text="Type of Goal"/>
				<!--<Input id="idPersNo"/>-->
				<ComboBox id="cbox" valueState="None" name="Type of Goal" placeholder="Type of Goal">
					<items>
						<core:Item key="h" text="Happiness Goal"/>
						<core:Item key="h" text="Fitness Goal"/>
						<core:Item key="h" text="Nutrition Goal"/>
					</items>
				</ComboBox>
				<Label text="Goal Name"/>
				<Input id="idgoalname"/>
			</f:content>
		</f:SimpleForm>
		        </l:content>
		</l:Grid>
		<buttons>
			<Button text="CLOSE" press="closeDialog" type="Reject"/>
			<Button text="SAVE" press="onSave" type="Accept"/>
		</buttons>
	</Dialog>
